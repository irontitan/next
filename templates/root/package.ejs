{
  "name": "<%= project.name %>",
  "version": "1.0.0",
  <% if (project.description) { %>"description": "<%= project.description %>",<% } else { %>"description": "",<% } %>
  "main": "dist/index.js",
  "scripts": {
    "clean": "rm -rf ./dist",
    "test": "npm run build && mocha test",
    "lint": "tslint --project tsconfig.json",
    "build": "tsc",
    "build:debug": "npm run clean && npm run build -- --sourceMap",
    "build:clean": "npm run clean && npm run build",
    "build:watch": "tsc -w",
    "build:start": "npm run build:clean && npm start",
    "start": "node dist/index.js",
    "start:debug": "concurrently -s all \"tsc -w\" \"DEBUG=expresso:*,gg:* nodemon dist/index.js\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "repository": {
    "type": "<%= project.repository.type %>",
    "url": "<%= project.repository.url %>"
  },
  <% if (project.author.name && project.author.email) { %>"author": "<%= project.author.name %> <<%= project.author.email %>>",<% } %>
  "license": "ISC",
  "devDependencies": {
    "@types/express": "^4.16.0",
    "@types/mongodb": "^3.1.12",
    "@types/node": "^10.11.6",
    "concurrently": "^4.0.1",
    "husky": "^1.1.2",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.4",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-standard": "^8.0.1",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^3.1.1"
  },
  "dependencies": {
    "@expresso/app": "^1.0.3",
    "@expresso/auth": "^1.0.5",
    "@expresso/errors": "^1.0.4",
    "@expresso/expresso": "^0.15.0",
    "@expresso/server": "^1.0.2",
    "@nxcd/paradox": "^2.11.2",
    "@types/mocha": "^5.2.6",
    "express-rescue": "^1.1.5",
    "mongodb": "^3.1.10",
    "reflect-metadata": "^0.1.13",
    "sugar-env": "^1.5.3",
    "tsyringe": "^3.0.1"
  }
}
